<html lang="en">
	<head>
		<%- include('partials/head') %>
	</head>

	<body>
		<header><%- include('partials/header') %></header>
		<main class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Entries</h1>
					<form action="/entries" method="get">
						<div class="d-flex align-items-center">
							<input
								type="date"
								class="form-control"
								id="date"
								name="date"
								value="<%= prevDateFilter %>"
							/>
							<input
								type="text"
								class="form-control ms-2"
								id="search"
								name="search"
								value="<%= prevSearchFilter %>"
								placeholder="Search"
							/>
							<button
								type="submit"
								class="btn btn-secondary ms-2"
							>
								Search
							</button>
							<a href="/entries" class="btn btn-secondary ms-2">
								Clear
							</a>
							<a
								href="/entries/create"
								class="btn btn-primary ms-2 w-50"
								>New Entry</a
							>
						</div>
					</form>
					<table class="table table-striped">
						<thead>
							<tr>
								<th>Date</th>
								<th>Comment</th>
								<th>Plus</th>
								<th>Minus</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							<% entries.forEach((entry)=> { %>
							<tr>
								<td>
									<%= new
									Date(entry.date).toLocaleDateString() %>
								</td>
								<td><%= entry.comment %></td>
								<td>
									<% entry.plusTags.forEach((tag)=> { %>
									<span class="badge rounded-pill bg-success"
										><%= tag.name %></span
									>
									<% }) %>
								</td>
								<td>
									<% entry.minusTags.forEach((tag)=> { %>
									<span class="badge rounded-pill bg-danger"
										><%= tag.name %></span
									>
									<% }) %>
								</td>
								<td>
									<a
										href="/entries/<%= entry.id %>"
										class="btn btn-primary"
										>View</a
									>
									<a
										href="/entries/<%= entry.id %>/delete"
										class="btn btn-danger"
										>Delete</a
									>
								</td>
							</tr>
							<% }) %>
						</tbody>
					</table>
				</div>
			</div>
		</main>
	</body>
</html>
